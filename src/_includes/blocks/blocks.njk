{% macro reviewBlock(review, reviewType, app) %}
  <li data-review-type="{{ reviewType }}">
    <p># {{ app.name | safe }}</p>
    <blockquote cite="{{ review.url }}">
      <p>{{ review.quote | safe }}</p>
      <footer>
        <a href="{{ app[review.defaultUrl] if review.defaultUrl else review.url }}" target="_blank">
          {% if review.stars -%}
            <span style="color: red;">
              {%- for i in range(0, review.stars) -%}
                â˜…
              {%- endfor -%}
            </span>
          {% else %}
            [NOSTARS]
          {% endif -%}

          {# {{ review.source | safe }} &nbsp;&nbsp;&nbsp; App: {{ app.name | safe }} #}
          {{ review.sourceLine if review.sourceLine else review.source | safe }}
        </a>
      </footer>
    </blockquote>
  </li>
{% endmacro %}